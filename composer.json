{
    "name": "ashrafali/wp-omni-rss",
    "description": "A WordPress plugin that syndicates all your content in one unified RSS feed",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Ashraf Ali",
            "homepage": "https://ashrafali.net"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "fix": "phpcbf",
        "coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
} 